<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

	<bean id="conLog" class="com.fdmgroup.example.aop.ConsoleLog" />
	<bean id="cA" class="com.fdmgroup.example.aop.ClassA" />
	<bean id="cB" class="com.fdmgroup.example.aop.ClassB" />

	<aop:aspectj-autoproxy />

	<aop:config>

		<!-- Pointcuts -->

		<aop:pointcut id="everything" expression="execution(* *(..))" />
		<aop:pointcut id="method2Only" expression="execution(* method2(..))" />
		<aop:pointcut id="returnTypeClassBInClassB"
			expression="execution(com.fdmgroup.example.aop.ClassB com.fdmgroup.example.aop.ClassB.*(..))" />
		<aop:pointcut id="returnTypeClassBInAnyClass"
			expression="execution(com.fdmgroup.example.aop.ClassB com.fdmgroup.example.aop.*.*(..))" />

		<!-- Aspect -->
		<aop:aspect id="loggingAspect" ref="conLog">

			<!-- Advice tags -->
			<aop:before pointcut-ref="everything" method="displayEntry" />

			<aop:before pointcut-ref="method2Only" method="displayEntryMethod2" />

			<aop:after-returning pointcut-ref="returnTypeClassBInAnyClass"
				method="displayReturnClassB" />

			<aop:after pointcut-ref="returnTypeClassBInClassB" method="displayReturnClassB" />

		</aop:aspect>

	</aop:config>

</beans>